@model IEnumerable<ProductSystem.Web.Models.ProductViewModel>
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    
    <p class="lead">ASP.NET</p>
</div>
<div class="row-fluid"> 
    @for (int i = 0; i < Model.Count(); i++)
    {
        var product = Model.ElementAt(i);

        <div class="col-md-4">
            <h2>@product.Manufacturer @product.Model</h2>
            <img src="@product.ImgURL" style="width: 100%; height: 100%;" />
            <p><a class="btn btn-default" href="@Url.Action("Details", "Product", new { product.Id })">Price @product.Price $</a></p>
        </div>
        if (i > 0 && ((i + 1) % 3) == 0)
        {
            @:</div>
            @:<div class="row-fluid">
        }
        }
    </div>